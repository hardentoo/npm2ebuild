EAPI=5

inherit npm

DESCRIPTION="{{description}}"
{{#homepage}}
HOMEPAGE="{{{homepage}}}"
{{/homepage}}

LICENSE="{{license}}"
SLOT="0"
KEYWORDS="~amd64 ~x86"
IUSE=""
DEPEND="{{{required_nodejs_version_op}}}net-libs/nodejs-{{required_nodejs_version}}"
RDEPEND="${DEPEND}
{{#dependencies}}
    {{{op}}}dev-nodejs/{{{name}}}{{#version}}-{{{version}}}{{/version}}
{{/dependencies}}"
{{#has_bin_files}}

src_install() {
        npm_src_install

        exeinto "$(get_nodemoduledir)"/bin
        {{#bin_files}}
        doexe {{{name}}}
        dosym "$(get_nodemoduledir)"/{{{name}}} /usr/bin/{{{symlink_name}}}
        {{/bin_files}}
}
{{/has_bin_files}}
